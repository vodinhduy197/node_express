if (success.length > 0)
    .alert.alert-success.alert-dismissible
        button(type="button" class="close" data-dismiss="alert") &times;
        span= success
if (errors.length > 0)
    .alert.alert-danger.alert-dismissible
        button(type="button" class="close" data-dismiss="alert") &times;
        ul
            each val in errors
                li= val